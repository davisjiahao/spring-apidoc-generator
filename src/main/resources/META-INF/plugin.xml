<idea-plugin>
    <id>top.hungrywu.api-doc</id>
    <name>ApiDocWiki</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
<!--    <depends>com.intellij.modules.platform</depends>-->
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow id="apiDoc" secondary="true" icon="/toolWindow/plus.png" anchor="right"
                    factoryClass="top.hungrywu.toolwindow.ConsoleLogFactory"/>


        <applicationConfigurable instance="top.hungrywu.configuration.ApiDocConfigurable" id="apidoc"
                                 displayName="api doc"/>

        <applicationService serviceImplementation="top.hungrywu.configuration.ApiDocSetting"/>


    </extensions>



    <actions>
        <!-- Add your actions here -->
        <action id="top.hungrywu.action.GenerateProjectApiDocAction"
                class="top.hungrywu.action.GenerateProjectApiDocAction"
                text="generateProjectApiDoc" description="生成整个项目的apidoc">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>

        <action id="top.hungrywu.action.GenerateClassApiDescsAction"
                class="top.hungrywu.action.GenerateClassApiDescsAction"
                text="generateClassApiDoc" description="生成本文件的apidoc">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>

        <action id="generateApiDocOnWiki" class="top.hungrywu.action.GenerateApiDocOnWiki" text="generateApiDocOnWiki"
                description="生成本方法的apidoc"
                popup="false">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>